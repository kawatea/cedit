<?xml version="1.0"?>
<gconf>
        <dir name="schemas">
                <dir name="apps">
                        <dir name="gedit-2">
                                <dir name="plugins">
                                        <entry name="active-plugins">
                                                <local_schema short_desc="Pokrenuti dodaci">
                                                        <longdesc>Spisak aktivnih dodataka. Sadrži „putanju“ aktivnih dodataka. Pogledajte datoteku .gedit-plugin da biste saznali „putanju“ datog dodatka.</longdesc>
                                                </local_schema>
                                        </entry>
                                        <dir name="checkupdate">
                                                <entry name="ignore_version">
                                                        <local_schema short_desc="Izdanja koja treba zanemariti dok ne izađe naredno izdanje">
                                                        </local_schema>
                                                </entry>
                                        </dir>
                                        <dir name="filebrowser">
                                                <entry name="filter_pattern">
                                                        <local_schema short_desc="Maska filtera u pregledniku datoteka">
                                                                <longdesc>Maska filtera za primenu u pregledniku datoteka. Filter radi po režimu iz filter_mode.</longdesc>
                                                        </local_schema>
                                                </entry>
                                                <entry name="filter_mode">
                                                        <local_schema short_desc="Režim filtriranja u pregledniku datoteka">
                                                                <longdesc>Vrednost određuje koje datoteke će biti filtrirane iz pregledniku datoteka. Podržane vrednosti su: none (bez filtriranja), hidden (filtriraj skrivene datoteke), binary (filtriraj binarne datoteke) i hidden_and_binary (filtriraj skrivene i binarne datoteke).</longdesc>
                                                        </local_schema>
                                                </entry>
                                                <entry name="open_at_first_doc">
                                                        <local_schema short_desc="Postavi početak na prvi dokument">
                                                                <longdesc>Ako je postavljeno na „TRUE“ (tačno), dodatak za razgledanje datoteka će prikazati fasciklu dokumenta koji je prvi otvoren, ukoliko razgledač nije već korišćen. Ovo obično vredi kada se dokument otvara iz komandne linije, Nautilusa, itd.</longdesc>
                                                        </local_schema>
                                                </entry>
                                                <dir name="on_load">
                                                        <entry name="enable_remote">
                                                                <local_schema short_desc="Omogući obnavljanje udaljenih lokacija">
                                                                        <longdesc>Da li treba omogućiti obnavljanje udaljenih lokacija.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                        <entry name="virtual_root">
                                                                <local_schema short_desc="Zamišljeni korenska fascikla u pregledniku datoteka">
                                                                        <longdesc>Šta treba biti zamišljena korenska fascikla pri učitavanju preglednika datoteka kada je onload/tree_view omogućeno (TRUE). Zamišljena fascikla mora biti unutar stvarne korenske fascikle.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                        <entry name="root">
                                                                <local_schema short_desc="Korenska fascikla u pregledniku datoteka">
                                                                        <longdesc>Šta treba biti korenska fascikla pri učitavanju preglednika datoteka kada je onload/tree_view omogućeno (TRUE).</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                        <entry name="tree_view">
                                                                <local_schema short_desc="Otvori kao stablo">
                                                                        <longdesc>Prikazuje stablo kada se preglednik datoteka učita umesto pregleda obeleživača</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                </dir>
                                        </dir>
                                </dir>
                                <dir name="preferences">
                                        <dir name="syntax_highlighting">
                                                <entry name="enable">
                                                        <local_schema short_desc="Uključi isticanje sintakse">
                                                                <longdesc>Da li da program omogući isticanje sintakse.</longdesc>
                                                        </local_schema>
                                                </entry>
                                        </dir>
                                        <dir name="encodings">
                                                <entry name="shown_in_menu">
                                                        <local_schema short_desc="Kodni rasporedi prikazani u meniju">
                                                        </local_schema>
                                                </entry>
                                                <entry name="auto_detected">
                                                        <local_schema short_desc="Automatski otkrivaj kodne rasporede">
                                                        </local_schema>
                                                </entry>
                                        </dir>
                                        <dir name="print">
                                                <dir name="fonts">
                                                        <entry name="print_font_numbers_pango">
                                                                <local_schema short_desc="Font za štampanje broja linije">
                                                                </local_schema>
                                                        </entry>
                                                        <entry name="print_font_header_pango">
                                                                <local_schema short_desc="Font za štampanje zaglavlja">
                                                                </local_schema>
                                                        </entry>
                                                        <entry name="print_font_body_pango">
                                                                <local_schema short_desc="Font za štampanje tela teksta">
                                                                </local_schema>
                                                        </entry>
                                                </dir>
                                                <dir name="page">
                                                        <entry name="print_line_numbers">
                                                                <local_schema short_desc="Štampaj brojeve linija">
                                                                        <longdesc>Ukoliko je vrednost 0, program neće umetati brojeve linija prilikom štampanja dokumenta. U suprotnom, program će štampati broj linije za svaki uneti broj linija.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                        <entry name="print_wrap_mode">
                                                                <local_schema short_desc="Način preloma štampane linije">
                                                                        <longdesc>Podešava način preloma dugačkih linija za štampanje. Koristiti „GTK_WRAP_NONE“ za isključivanje preloma, „GTK_WRAP_WORD“ za prelom na kraju reči, i „GTK_WRAP_CHAR“ za prelom između znakova. Obratite pažnju da su vrednosti osetljive na velika ili mala slova, pa se uverite da ih koristite na isti način kao što su ovde navedene.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                        <entry name="print_header">
                                                                <local_schema short_desc="Štampaj zaglavlje">
                                                                        <longdesc>Da li da program uključi zaglavlje dokumenta prilikom štampanja.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                        <entry name="print_syntax_highlighting">
                                                                <local_schema short_desc="Štampaj isticanje sintakse">
                                                                        <longdesc>Da li da program ističe sintaksu prilikom štampanja dokumenata.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                </dir>
                                        </dir>
                                        <dir name="ui">
                                                <dir name="recents">
                                                        <entry name="max_recents">
                                                                <local_schema short_desc="Maksimum skoro otvaranih datoteka">
                                                                        <longdesc>Podešava maksimalan broj skoro otvorenih datoteka koje će biti prikazane u „Skoro otvorene datoteke“ podmeniju.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                </dir>
                                                <dir name="bottom_panel">
                                                        <entry name="bottom_panel_visible">
                                                                <local_schema short_desc="Panel na dnu je vidljiv">
                                                                        <longdesc>Da li panel na dnu prostora za unos teksta treba da bude vidljiv.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                </dir>
                                                <dir name="side_pane">
                                                        <entry name="side_pane_visible">
                                                                <local_schema short_desc="Bočna oblast je vidljiva">
                                                                        <longdesc>Da li bočni panel u levom delu oblasti za unos teksta treba da bude vidljiv.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                </dir>
                                                <dir name="statusbar">
                                                        <entry name="statusbar_visible">
                                                                <local_schema short_desc="Prikaži statusnu liniju">
                                                                        <longdesc>Da li da linija stanja u dnu prostora za izmenu teksta bude vidljiva.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                </dir>
                                                <dir name="toolbar">
                                                        <entry name="toolbar_buttons_style">
                                                                <local_schema short_desc="Stil dugmića na paleti sa alatima">
                                                                        <longdesc>Stil dugmića na liniji alata. Moguće vrednosti su „GEDIT_TOOLBAR_SYSTEM“ za Podrazumevani sistemski stil, „GEDIT_TOOLBAR_ICONS“ za prikaz samo ikona, „GEDIT_TOOLBAR_ICONS_AND_TEXT“ za prikaz i ikona i teksta, i „GEDIT_TOOLBAR_ICONS_BOTH_HORIZ“ za prikaz naglašenog teksta pored ikona. Obratite pažnju da su vrednosti osetljive na velika i mala slova, pa se uverite da ih koristite kao što su ovde navedene.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                        <entry name="toolbar_visible">
                                                                <local_schema short_desc="Paleta sa alatima je vidljiva">
                                                                        <longdesc>Da li da linija sa alatima bude vidljiva.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                </dir>
                                        </dir>
                                        <dir name="editor">
                                                <dir name="search_highlighting">
                                                        <entry name="enable">
                                                                <local_schema short_desc="Uključi isticanje pronađenog teksta">
                                                                        <longdesc>Da li treba istaknuti sve pojave pronađenog teksta.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                </dir>
                                                <dir name="cursor_position">
                                                        <entry name="restore_cursor_position">
                                                                <local_schema short_desc="Vrati prethodni položaj kursora">
                                                                        <longdesc>Da li da program povrati prethodnu poziciju kursora kada se učita datoteka..</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                </dir>
                                                <dir name="smart_home_end">
                                                        <entry name="smart_home_end">
                                                                <local_schema short_desc="Pametne Home/End tipke">
                                                                        <longdesc>Podešava kako se kursor pomera kada se pritisnu tipke HOME i END. Koristiti „DISABLED“ za stalno vraćanje na početak/kraj linije, „AFTER“ za pomeranje na početak/kraj linije po prvom pritisku i početak/kraj teksta zanemarijući beline po drugom pritisku, „BEFORE“ za pomeranje na početak/kraj teksta pre pomeranja na početak/kraj linije i „ALWAYS“ za pomeranje na početak/kraj teksta umesto početak/kraj linije.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                </dir>
                                                <dir name="right_margin">
                                                        <entry name="right_margin_position">
                                                                <local_schema short_desc="Položaj desne margine">
                                                                        <longdesc>Određuje položaj desne margine.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                        <entry name="display_right_margin">
                                                                <local_schema short_desc="Prikaži desnu marginu">
                                                                        <longdesc>Da li da program prikaže desnu marginu u prostoru za izmenu teksta.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                </dir>
                                                <dir name="bracket_matching">
                                                        <entry name="bracket_matching">
                                                                <local_schema short_desc="Istakni uparenu zagradu">
                                                                        <longdesc>Da li da program upari zagradu koja se poklapa sa označenom.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                </dir>
                                                <dir name="current_line">
                                                        <entry name="highlight_current_line">
                                                                <local_schema short_desc="Istakni tekući red">
                                                                        <longdesc>Da li da program ističe tekući red u Vilenjakovoj beležnici.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                </dir>
                                                <dir name="line_numbers">
                                                        <entry name="display_line_numbers">
                                                                <local_schema short_desc="Prikaži brojeve linija">
                                                                        <longdesc>Da li da program prikaže brojeve linija u prostoru za izmenu teksta.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                </dir>
                                                <dir name="auto_indent">
                                                        <entry name="auto_indent">
                                                                <local_schema short_desc="Uvlači u radu">
                                                                        <longdesc>Da li da program omogući automatsko uvlačenje.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                </dir>
                                                <dir name="tabs">
                                                        <entry name="insert_spaces">
                                                                <local_schema short_desc="Umetni razmake">
                                                                        <longdesc>Da li da program umetne razmake umesto tabulatora.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                        <entry name="tabs_size">
                                                                <local_schema short_desc="Veličina tabulatora">
                                                                        <longdesc>Podešava broj razmaka koji će biti prikazan umesto znaka tabulatora.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                </dir>
                                                <dir name="wrap_mode">
                                                        <entry name="wrap_mode">
                                                                <local_schema short_desc="Način preloma linije">
                                                                        <longdesc>Podešava način preloma dugačkih linija za štampanje. Koristiti „GTK_WRAP_NONE“ za isključivanje preloma, „GTK_WRAP_WORD“ za prelom na kraju reči, i „GTK_WRAP_CHAR“ za prelom između znakova. Obratite pažnju da su vrednosti osetljive na velika ili mala slova, pa se uverite da ih koristitie na isti način kao što su ovde navedene.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                </dir>
                                                <dir name="undo">
                                                        <entry name="max_undo_actions">
                                                                <local_schema short_desc="Najveći broj opozvanih akcija">
                                                                        <longdesc>Maksimalan broj radnji koje će program moći da opozove ili ponovi. Koristite „-1“ za neograničen broj radnji.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                        <entry name="undo_actions_limit">
                                                                <local_schema short_desc="Ograničenje opoziva akcija (ZASTARELO)">
                                                                        <longdesc>Maksimalan broj radnji koje će program moći da opozove ili ponovi. Koristite „-1“ za neograničen broj radnji. Zastarelo počevši od 2.12.0.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                </dir>
                                                <dir name="save">
                                                        <entry name="writable_vfs_schemes">
                                                                <local_schema short_desc="Mogućnosti upisa na virtualne sisteme datoteka">
                                                                        <longdesc>Spisak VFS šema koje program podržava u režimu upisa. Šema „file“ je podrazumevano upisiva.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                        <entry name="auto_save_interval">
                                                                <local_schema short_desc="Vremenski razmak za periodično čuvanje">
                                                                        <longdesc>Broj minuta nakon kojih će program automatski sačuvati izmenjenu datoteku. Ovo će jedino imati efekta ukoliko je opcija „Automatsko snimanje“ uključena.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                        <entry name="auto_save">
                                                                <local_schema short_desc="Čuvaj u periodičnim razmacima">
                                                                        <longdesc>Da li da program automatski čuva izmenjenu datoteku posle određenog vremenskog intervala. Možete postaviti vremenski interval pomoću opcije „Vremenski razmak za periodično čuvanje“.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                        <entry name="backup_copy_extension">
                                                                <local_schema short_desc="Ekstenzija rezervne kopije">
                                                                        <longdesc>Ekstenzija ili sufiks koji će biti korišćen u imenu rezervne kopije datoteke. Ovo će jedino imati efekta ukoliko je opcija „Pravi rezervne kopije“ uključena.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                        <entry name="create_backup_copy">
                                                                <local_schema short_desc="Pravi rezervne primerke">
                                                                        <longdesc>Da li da program pravi rezervnu kopiju za datoteke koje čuva. Možete postaviti ekstenziju datoteke sa rezervnom kopijom pomoću opcije „Ekstenzija rezervne kopije“.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                </dir>
                                                <dir name="colors">
                                                        <entry name="scheme">
                                                                <local_schema short_desc="Postavke stila">
                                                                        <longdesc>ID postavke GtkSourceView stila koji se koristi za bojenje teksta.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                </dir>
                                                <dir name="font">
                                                        <entry name="editor_font">
                                                                <local_schema short_desc="Font uređivača">
                                                                </local_schema>
                                                        </entry>
                                                        <entry name="use_default_font">
                                                                <local_schema short_desc="Koristi podrazumevani font">
                                                                        <longdesc>Da li treba koristiti podrazumevani sistemski font fiksne širine za prikaz teksta umesto fonta navedenog u podešavanjima programa Vilenjakova beležnica. Ako je ova opcija isključena, font naveden u opciji „Font uređivača“ će biti korišćen umesto sistemskog fonta.</longdesc>
                                                                </local_schema>
                                                        </entry>
                                                </dir>
                                        </dir>
                                </dir>
                        </dir>
                </dir>
        </dir>
</gconf>
